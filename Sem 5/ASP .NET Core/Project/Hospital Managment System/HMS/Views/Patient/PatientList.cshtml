@model DataTable;
@using System.Data;
<!DOCTYPE html>
<html>
<head>
    <title>Patient List</title>
</head>
<body>
    <h1>Patient List</h1>
    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Patient List</h5>
            <a href="/Patient/PatientAddEdit" class="btn btn-light btn-sm">
                <i class="bx bx-plus"></i> Add Patient
            </a>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>DOB</th>
                            <th>Gender</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th>City</th>
                            <th>State</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow row in Model.Rows)
                        {
                            DateTime dob = Convert.ToDateTime(row["DateOfBirth"]);
                            string formattedDOB = dob.ToString("dd-MMM-yyyy");

                            <tr>
                                <td>@row["PatientID"]</td>
                                <td><strong>@row["Name"]</strong></td>
                                <td>@formattedDOB</td>
                                <td>@row["Gender"]</td>
                                <td>@row["Email"]</td>
                                <td>@row["Phone"]</td>
                                <td>@row["Address"]</td>
                                <td>@row["City"]</td>
                                <td>@row["State"]</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-sm btn-outline-primary" href="/Patient/Edit/@row["PatientID"]" title="Edit">
                                            <i class="bx bx-edit-alt"></i>
                                        </a>
                                        <a class="btn btn-sm btn-outline-danger" asp-controller="Patient" asp-action="PatientDelete" asp-route-PatientID="@row["PatientID"]" title="Delete"
                                           onclick="return confirm('Are you sure you want to delete this patient?');">
                                            <i class="bx bx-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>



</body>
</html>