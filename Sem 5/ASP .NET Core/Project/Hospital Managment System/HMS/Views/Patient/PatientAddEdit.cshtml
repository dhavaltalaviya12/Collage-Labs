<!DOCTYPE html>
<html>
<head>
    <title>Add/Edit Patient</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="card shadow-sm rounded-3 m-4">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Add/Edit Patient</h5>
            <a href="/Patient/PatientList" class="btn btn-light btn-sm">
                <i class="bx bx-arrow-back"></i> Back to List
            </a>
        </div>

        <div class="card-body">
            <form method="post" asp-controller="Patient" asp-action="PatientAddEdit">
                <input type="hidden" name="PatientID" value="0" />
                <input type="hidden" name="UserID" value="1" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Name</label>
                        <input type="text" class="form-control" name="Name" placeholder="Enter Name" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Date of Birth</label>
                        <input type="date" class="form-control" name="DateOfBirth" required />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Gender</label>
                        <select class="form-select" name="Gender" required>
                            <option value="">-- Select Gender --</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" name="Email" placeholder="Enter Email" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Phone</label>
                        <input type="text" class="form-control" name="Phone" placeholder="Enter Phone Number" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Address</label>
                        <input type="text" class="form-control" name="Address" placeholder="Enter Address" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">City</label>
                        <input type="text" class="form-control" name="City" placeholder="Enter City" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">State</label>
                        <input type="text" class="form-control" name="State" placeholder="Enter State" />
                    </div>
                </div>

                <div class="form-check mb-3">
                    <input type="checkbox" class="form-check-input" name="IsActive" value="true" checked />
                    <label class="form-check-label">Is Active</label>
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="bx bx-save"></i> Save
                </button>
            </form>
        </div>
    </div>
</body>
</html>
