@model DataTable;
@using System.Data;
<!DOCTYPE html>
<html>
<head>
    <title>Users List</title>
</head>
<body>
    <h1>Users List</h1>
    @* @if (@TempData["Messege"]) *@
    @* {
         <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Messege"]
        <button type="button" class="close" data-dismiss="alert" aria-lable="Close"><span aria-hidden="true">&times;</span></button>
    </div>
    } *@
   
    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">User List</h5>
            <a href="/User/UserAddEdit" class="btn btn-light btn-sm">
                <i class="bx bx-plus"></i> Add User
            </a>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Mobile No</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow row in Model.Rows)
                        {
                            <tr>
                                <td>@row["UserID"]</td>
                                <td><strong>@row["UserName"]</strong></td>
                                <td>@row["Email"]</td>
                                <td>@row["MobileNo"]</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-sm btn-outline-primary" href="/User/Edit/@row["UserID"]" title="Edit">
                                            <i class="bx bx-edit-alt"></i>
                                        </a>
                                        <a class="btn btn-sm btn-outline-danger" asp-controller="User" asp-action="UserDelete" asp-route-UserID="@row["UserID"]" title="Delete"
                                           onclick="return confirm('Are you sure you want to delete this user?');">
                                            <i class="bx bx-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>



</body>
</html>