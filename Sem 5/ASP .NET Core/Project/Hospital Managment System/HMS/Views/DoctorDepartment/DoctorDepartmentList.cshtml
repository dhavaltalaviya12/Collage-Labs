@model DataTable;
@using System.Data;
<!DOCTYPE html>
<html>
<head>
    <title>Doctor Department List</title>
</head>
<body>
    <h1>Doctor Department List</h1>
    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Doctor Department List</h5>
            <a href="/DoctorDepartment/DoctorDepartmentAddEdit" class="btn btn-light btn-sm">
                <i class="bx bx-plus"></i> Add New
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Doctor Name</th>
                            <th>Department</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow row in Model.Rows)
                        {
                            <tr>
                                <td>@row["DoctorDepartmentID"]</td>
                                <td>
                                    <div class="d-flex align-items-center justify-content-center gap-2">
                                        <i class="fab fa-user-md fa-lg text-info"></i>
                                        <strong>@row["DoctorName"]</strong>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@row["DepartmentName"]</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-sm btn-outline-primary" href="/DoctorDepartment/Edit/@row["DoctorDepartmentID"]" title="Edit">
                                            <i class="bx bx-edit-alt"></i>
                                        </a>
                                        <a class="btn btn-sm btn-outline-danger" asp-controller="DoctorDepartment" asp-action="DoctorDepartmentDelete" asp-route-DoctorDepartmentID="@row["DoctorDepartmentID"]" title="Delete" onclick="return confirm('Are you sure you want to delete this entry?');">
                                            <i class="bx bx-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>



</body>
</html>