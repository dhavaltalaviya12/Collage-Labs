<!DOCTYPE html>
<html>
<head>
    <title>Add/Edit Doctor</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="card shadow-sm rounded-3 m-4">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Add/Edit Doctor</h5>
            <a href="/Doctor/DoctorList" class="btn btn-light btn-sm">
                <i class="bx bx-arrow-back"></i> Back to List
            </a>
        </div>

        <div class="card-body">
            <form method="post" asp-controller="Doctor" asp-action="DoctorAddEdit">
                @* <input type="hidden" name="DoctorID" value="0" /> *@

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">User ID</label>
                        <input type="number" class="form-control" name="UserID" placeholder="Enter User ID" value="1" required />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Name</label>
                        <input type="text" class="form-control" name="Name" placeholder="Enter Doctor Name" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Phone</label>
                        <input type="text" class="form-control" name="Phone" placeholder="Enter Phone" required />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" name="Email" placeholder="Enter Email" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Qualification</label>
                        <input type="text" class="form-control" name="Qualification" placeholder="Enter Qualification" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Specialization</label>
                        <input type="text" class="form-control" name="Specialization" placeholder="Enter Specialization" />
                    </div>
                    <div class="col-md-6 d-flex align-items-center">
                        <div class="form-check mt-4">
                            <input type="checkbox" class="form-check-input" name="IsActive" value="true" checked />
                            <label class="form-check-label">Is Active</label>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="bx bx-save"></i> Save
                </button>
            </form>
        </div>
    </div>
</body>
</html>
