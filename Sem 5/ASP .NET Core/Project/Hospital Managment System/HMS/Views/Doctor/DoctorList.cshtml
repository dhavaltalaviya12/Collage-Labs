@model DataTable;
@using System.Data;
<!DOCTYPE html>
<html>
<head>
    <title>Doctor List</title>
</head>
<body>
    <h1>Doctor List</h1>
    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Doctor List</h5>
            <a href="/Doctor/DoctorAddEdit" class="btn btn-light btn-sm">
                <i class="bx bx-plus"></i> Add Doctor
            </a>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Qualification</th>
                            <th>Specialization</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow row in Model.Rows)
                        {
                            <tr>
                                <td>@row["DoctorID"]</td>
                                <td><strong>@row["Name"]</strong></td>
                                <td>@row["Email"]</td>
                                <td>@row["Phone"]</td>
                                <td>@row["Qualification"]</td>
                                <td>@row["Specialization"]</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-sm btn-outline-primary" href="/Doctor/Edit/@row["DoctorID"]" title="Edit">
                                            <i class="bx bx-edit-alt"></i>
                                        </a>
                                        <a class="btn btn-sm btn-outline-danger" asp-controller="Doctor" asp-action="DoctorDelete" asp-route-DoctorID="@row["DoctorID"]" title="Delete"
                                           onclick="return confirm('Are you sure you want to delete this doctor?');">
                                            <i class="bx bx-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>



</body>
</html>