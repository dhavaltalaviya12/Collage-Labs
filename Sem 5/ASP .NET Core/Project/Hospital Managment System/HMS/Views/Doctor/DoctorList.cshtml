@model DataTable;
@using System.Data;
<!DOCTYPE html>
<html>
<head>
    <title>Doctor List</title>
</head>
<body>
    <h1>Doctor List</h1>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Doctor List</h5>

            <!-- Table with hoverable rows -->
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>DoctorID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Qualification</th>
                        <th>Specialization</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.Rows)
                    {
                        <tr>
                            <td>@row["DoctorID"]</td>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@row["Name"]</strong></td>
                            <td><span class=" me-1">@row["Email"]</span></td>
                            <td><span class=" me-1">@row["Phone"]</span></td>
                            <td><span class=" me-1">@row["Qualification"]</span></td>
                            <td><span class=" me-1">@row["Specialization"]</span></td>

                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                        <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <!-- End Table with hoverable rows -->

        </div>
    </div>


</body>
</html>